    section#Footer
      .social-links
        h1 FOLLOW US ON SOCIAL MEDIA
        .social-media
          a(href='#')
            i.fab.fa-facebook
          a(href='#')
            i.fab.fa-twitter
          a(href='#')
            i.fab.fa-whatsapp
