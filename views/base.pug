  body(onload='slider()')
    // ----------------------------------- main home page image slider --------------------------------------
    section#Header
      .banner
        .slider
          img#slideimg(src='https://drive.google.com/file/d/1ZhBYRc5XTZJ4ojbeQMa2adLt-SV_3wGO/view?usp=sharing')
        .overlay
          .navbar
            .logo
              a(href='/')
                img(src='../static/img/cover.png' alt='logo')
            .menuicons
              ul
                a(href='/')
                  li Home
                a(href='/AboutUs')
                  li About
                a(href='/Services')
                  li Services
                a(href='/Tours')
                  li Tours
                a(href='/Hotel')
                  li Hotels
                a(href='/Blogs')
                  li Blogs
                a(href='/Contact')
                  li Contact
                a(href='/User')
                  i.fas.fa-user
                //- a(href='/LogInSignUp')
                //-   button#userBtn(type='button') Sign in/Sign up
                //- a(href='/Logout')
                //-   button#userBtn2(type='button') Logout
            #sidenav
              nav
                ul
                  li
                    a(href='/User')
                      i.fas.fa-user
                  li
                    a(href='/') Home
                  li
                    a(href='/AboutUs') About
                  li
                    a(href='/Services') Services
                  li
                    a(href='./Tours') Tours
                  li
                    a(href='/Hotel') Hotels
                  li
                    a(href='/Blogs') Blogs
                  li
                    a(href='/Contact') Contact
            #menuBtn
              i#open.fas.fa-bars.both-oc
              i#close.fas.fa-times.both-oc
